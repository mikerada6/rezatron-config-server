<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Local File Appender for 'dev' profile -->
    <springProfile name="dev">
        <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>/Users/mradas341/Desktop/logs/config-server-dev.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>/Users/mradas341/Desktop/logs/config-server-dev.%d{yyyy-MM-dd}.log</fileNamePattern>
                <maxHistory>7</maxHistory>
            </rollingPolicy>
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>
    </springProfile>

    <!-- Deployed File Appender for 'prod' profile -->
    <springProfile name="prod">
        <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>/opt/tomcat/logs/config-server/config-server.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>/opt/tomcat/logs/config-server/config-server.%d{yyyy-MM-dd}.log</fileNamePattern>
                <maxHistory>30</maxHistory>
            </rollingPolicy>
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>
    </springProfile>

    <!-- Set default logging level -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>

    <!-- Spring Framework Logging -->
    <logger name="org.springframework" level="INFO" />

    <!-- Spring Boot logging -->
    <logger name="org.springframework.boot" level="INFO" />

    <!-- Spring Cloud Config Server -->
    <logger name="org.springframework.cloud.config" level="INFO" />
    <logger name="org.springframework.cloud.config.server" level="DEBUG" />

    <!-- Spring Cloud Vault -->
    <logger name="org.springframework.cloud.vault" level="INFO" />

    <!-- Micrometer / Prometheus -->
    <logger name="io.micrometer.prometheus" level="INFO" />

    <!-- Spring Boot Actuator -->
    <logger name="org.springframework.boot.actuate" level="INFO" />

    <!-- JGit Logging -->
    <logger name="org.eclipse.jgit" level="INFO" />

    <!-- Test-related logging -->
    <logger name="org.springframework.boot.test" level="WARN" />

    <!-- Lombok-generated logging (optional, adjust based on your logging strategy) -->
    <logger name="lombok" level="WARN" />

    <!-- Tomcat Logging -->
    <logger name="org.apache.catalina" level="INFO" />
    <logger name="org.apache.coyote" level="INFO" />

    <!-- SQL Logging (only if required, usually set to ERROR to avoid verbosity) -->
    <logger name="org.hibernate.SQL" level="ERROR" />

    <!-- Set specific logging level for application classes -->
    <logger name="org.rezatron" level="DEBUG" />

    <!-- Enable TRACE logging to capture detailed information about Vault access -->
    <logger name="org.springframework.cloud.vault.config" level="TRACE" />
    <logger name="org.springframework.vault.authentication" level="TRACE" />

    <!-- Example: Logging every attempt to authenticate with Vault -->
    <logger name="org.springframework.vault.authentication.LifecycleAwareSessionManager"
        level="TRACE" />

    <!-- Spring Security logging -->
    <logger name="org.springframework.security" level="INFO" />
    <logger name="org.springframework.security.web" level="DEBUG" />

    <!-- Log access decisions -->
    <logger name="org.springframework.security.access" level="DEBUG" />

    <!-- Log security configuration -->
    <logger name="org.springframework.security.config" level="DEBUG" />

</configuration>